<UserControl x:Class="PointOfSale.CustomizeTrailBurger"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock FontSize="30" Text="Customize Trailburger" Foreground="LimeGreen"/>
        <StackPanel Orientation="Vertical">
            <CheckBox IsChecked="{Binding Path=Bun}" VerticalAlignment="Center">Bun</CheckBox>
            <CheckBox IsChecked="{Binding Path=Ketchup}" VerticalAlignment="Center">Ketchup</CheckBox>
            <CheckBox IsChecked="{Binding Path=Mustard}" VerticalAlignment="Center">Mustard</CheckBox>
            <CheckBox IsChecked="{Binding Path=Pickle}" VerticalAlignment="Center">Pickle</CheckBox>
            <CheckBox IsChecked="{Binding Path=Cheese}" VerticalAlignment="Center">Cheese</CheckBox>
        </StackPanel>
    </StackPanel>
</UserControl>
