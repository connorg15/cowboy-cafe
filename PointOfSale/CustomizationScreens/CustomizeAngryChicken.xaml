<UserControl x:Class="PointOfSale.CustomizeAngryChicken"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Background="DodgerBlue">
        <TextBlock FontSize="30" Text="Customize Angry Chicken" Foreground="Yellow"/>
        <StackPanel Orientation="Vertical">
            <CheckBox IsChecked="{Binding Path=Bread}" Foreground="Yellow" VerticalAlignment="Bottom" FontSize="20" Height="60">Bread</CheckBox>
            <CheckBox IsChecked="{Binding Path=Pickle}" Foreground="Yellow" VerticalAlignment="Center" FontSize="20">Pickle</CheckBox>
        </StackPanel>
    </StackPanel>
</UserControl>
