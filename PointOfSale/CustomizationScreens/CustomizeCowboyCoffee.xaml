<UserControl x:Class="PointOfSale.CustomizeCowboyCoffee"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="500">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="60"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Background" Value="Wheat"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="Yellow"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </UserControl.Resources>
    <StackPanel Background="DodgerBlue">
        <TextBlock FontSize="30" Text="Customize Cowboy Coffee" Foreground="Yellow"/>
        <Label>Size</Label>
        <Button Name="Small_Button" Click="Button_Click">Small</Button>
        <Button Name="Medium_Button" Click="Button_Click">Medium</Button>
        <Button Name="Large_Button" Click="Button_Click">Large</Button>
        <Label>Drink Options</Label>
        <Button Name="Decaf_Button" Click="Button_Click">Decaf</Button>
        <Button Name="NoDecaf_Button" Click="Button_Click">No Decaf</Button>
        <Button Name="RoomForCream_Button" Click="Button_Click">Room For Cream</Button>
        <Button Name="NoRoomForCream_Button" Click="Button_Click">No Room For Cream</Button>
        <Label>Ice</Label>
        <Button Name="Ice_Button" Click="Button_Click">Ice</Button>
        <Button Name="NoIce_Button" Click="Button_Click">No Ice</Button>
    </StackPanel>
</UserControl>
